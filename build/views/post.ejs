<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Meanwise</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="Meanwise" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://meanwise.com" />
    <meta property="og:image" content="content/img/og.png" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="400" />
    <meta property="og:image:height" content="300" />
    <link rel="apple-touch-icon" href="/content/apple-touch-icon.png">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css">
    <link rel="stylesheet" href="/content/css/normalize.min.css">
    <link rel="stylesheet" href="/content/css/main.css">
    <style>
    .myButton {
        background-color: #6a11cb;
        border-radius: 999em;
        height: auto;
        display: inline-block;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        font-size: 17px;
        padding: 16px 31px;
        text-decoration: none;
    }
    
    .myButton:hover {
        background-color: #7b36c5;
    }
    
    .myButton:active {
        position: relative;
        top: 1px;
    }
    
    #postDetails {
        text-align: center;
        margin-top: 100px;
        color: #fff;
    }
    
    #manualAction {
        padding: 40px;
    }
    </style>
</head>

<body>
    <div id="modal-02">
        <!--"THIS IS IMPORTANT! to close the modal, the class name has to match the name given on the ID-->
        <div  id="btn-close-modal" class="close-modal-02">
                <img class="closebt" src="content/img/closebt.svg">
        </div>

        <div class="modal-content">
            <h1>Request early invite</h1>
            <form id="SubsribeForm1" onSubmit="subscribe(event)">
                <input id="emailAdd" type="text" name="email" placeholder="Please enter your email" />
                <p class="err"></p>
                
                <button id="SubscribeEmail">Submit</button>
            </form>
        </div>
    </div>

    <div class="header-container">
        <header class="wrapper clearfix">
            <div class="main-nav">
                <ul class="main-nav-list">
                  <li class="main-nav-list-item"><a href="/">Get Meanwise</a></li>
                  <li class="main-nav-list-item"><a href="https://medium.com/@meanwise">Blog</a></li>
                  <li class="main-nav-list-item"><a href="/contact">Contact</a></li>
                  <li class="main-nav-list-item invite"><a id="demo02" href="#modal-02">Request an Invite</a></li>
                </ul>
            </div>
            <h1 class="title">
              <a class="logo" href="/"><img src="content/img/logo.svg"></a>
            </h1>
        </header>
    </div>

    <div id="postDetails">
        <h1></h1></div>
    <div id="manualAction"></div>
    <div class="footer-container">
        <footer class="wrapper">
            <a href="/privacy">Privacy</a>
            <a href="/terms">Terms</a>
        </footer>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="content/js/bundle.js"><\/script>')</script>

    <script src="/content/js/bundle.js"></script>

    <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
    <script>
        (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
        function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
        e=o.createElement(i);r=o.getElementsByTagName(i)[0];
        e.src='//www.google-analytics.com/analytics.js';
        r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
        ga('create','UA-XXXXX-X','auto');ga('send','pageview');

        function subscribe(event) {
          event.preventDefault();
          var email = $('#emailAdd')[0];
          $('.err')[0].innerHTML = "Please Wait...";

          $.ajax({ 
              url: '/subscribe',
              type: 'POST',
              cache: false, 
              data: { email: email.value },
              success: function(data){
                  email.value = '';
                  $('.err')[0].innerHTML = data.message;
              },
              error: function(data){
                  $('.err')[0].innerHTML = data.message;
              }
          });
        }

        var postid = location.search.split("post=").splice(1).join("").split("&")[0];
        document.getElementById("postDetails").innerHTML = "<h1>FEED ID #" + postid + "</h1>";
        document.getElementById("manualAction").innerHTML=  "<center><a href='meanwise://post/"+postid+"' class='myButton'>Open in App</a></center>"
    </script>
</body>

</html>
